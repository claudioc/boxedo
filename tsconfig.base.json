{
  "exclude": ["node_modules", "dist", "vite.config.ts"],
  "compilerOptions": {
    "incremental": false,
    "removeComments": true,
    "noEmit": true,

    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true
  }
}
