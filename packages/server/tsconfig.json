{
  "extends": "../core/tsconfig.base.json",
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["ES2022"],
    "jsx": "react-jsx",
    "jsxImportSource": "@kitajs/html",
    "plugins": [
      {
        "name": "@kitajs/ts-html-plugin"
      }
    ],
    "types": ["@kitajs/html/alpine.d.ts"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    }
  }
}
