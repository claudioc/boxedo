{
  "extends": "../tsconfig.base.json",
  "include": ["**/*.ts", "**/*.tsx", "types.ts"],
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "es2022",
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    }
  }
}
