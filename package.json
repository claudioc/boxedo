{
  "name": "joongle",
  "version": "0.1.0",
  "description": "",
  "main": "./dist/app.js",
  "type": "module",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.6.0"
  },
  "scripts": {
    "dev:start": "wait-on ./dist/server/app.js && node --env-file=.env --watch-preserve-output --watch-path ./dist/server ./dist/server/app.js",
    "dev:build": "npm run lint && node --env-file=.env esbuild.mjs",
    "build": "npm run lint && NODE_ENV=production node --env-file=.env esbuild.mjs",
    "dev": "npm run clean && conc -r -k 'npm:dev:*'",
    "clean": "rm -rf ./dist",
    "postinstall": "npm run build",
    "type-check": "tsc -p server && tsc -p client",
    "lint": "npm run type-check && eslint . --ext .ts",
    "prestart": "NODE_ENV=production npm run build",
    "start": "NODE_ENV=production node ./dist/server/app.js",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose down",
    "db:reset": "docker compose down && docker volume rm joongle_joongle_data",
    "server:test": "vitest",
    "was.bulk-load": "npm run db:stop && npm run db:reset && npm run db:start && esbuild --target=es2021 tasks/couchdb/bulkLoad.ts --outfile=tasks/bulkLoad.js && node --env-file=.env tasks/bulkLoad.js",
    "bulk-load": "esbuild --target=es2021 tasks/couchdb/bulkLoad.ts --outfile=tasks/bulkLoad.js && node --env-file=.env tasks/bulkLoad.js"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/*/*.js",
      "**/*/*.json",
      "tasks/**/*.ts",
      "vite.config.ts",
      "esbuild.mjs"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": [
        "./server/tsconfig.json",
        "./client/tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint",
      "import"
    ]
  },
  "devDependencies": {
    "@fastify/one-line-logger": "^1.3.0",
    "@types/alpinejs": "^3.13.6",
    "@types/nano": "^7.0.0",
    "@types/node": "^20.10.2",
    "@types/sanitize-html": "^2.11.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "esbuild": "0.19.11",
    "eslint": "^8.55.0",
    "eslint-plugin-import": "^2.29.0",
    "json-schema-to-ts": "^3.0.0",
    "typescript": "^5.4.5",
    "typescript-plugin-css-modules": "^5.1.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/csrf-protection": "^6.4.1",
    "@fastify/env": "^4.3.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/static": "^6.12.0",
    "@tiptap/core": "^2.1.16",
    "@tiptap/extension-document": "^2.1.16",
    "@tiptap/extension-image": "^2.3.0",
    "@tiptap/extension-placeholder": "^2.1.16",
    "@tiptap/extension-typography": "^2.2.4",
    "@tiptap/html": "^2.2.3",
    "@tiptap/pm": "^2.1.16",
    "@tiptap/starter-kit": "^2.1.16",
    "alpinejs": "^3.13.3",
    "cheerio": "^1.0.0-rc.12",
    "clsx": "^2.1.0",
    "fastify": "^4.25.1",
    "fastify-favicon": "^4.3.0",
    "fastify-plugin": "^4.5.1",
    "htmx.org": "^1.9.9",
    "nano": "^10.1.3",
    "npm": "^10.5.2",
    "preact": "^10.19.3",
    "preact-render-to-string": "^6.3.1",
    "sanitize-html": "^2.13.0",
    "slugify": "^1.6.6"
  }
}
