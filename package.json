{
  "name": "joongle",
  "version": "0.1.0",
  "description": "",
  "main": "./dist/app.js",
  "type": "module",
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20.6.0"
  },
  "scripts": {
    "dev:watch": "tsc -b ./client ./server --preserveWatchOutput -w",
    "dev:start": "wait-on ./dist/server/app.js && node --env-file=.env --watch-preserve-output --watch-path ./dist/server ./dist/server/app.js",
    "dev:build:client": "esbuild ./client/app.ts --bundle --analyze --outdir=./dist/client --watch --entry-names=[dir]/[name]-[hash] --metafile=./dist/client-meta.json --sourcemap",
    "dev:build:server": "esbuild ./server/app.ts --banner:js='import { createRequire } from \"module\";const require = createRequire(import.meta.url);' --metafile=./dist/server-meta.json --bundle --platform=node --outdir=./dist/server --format=esm --watch",
    "dev": "npm run clean && conc -r -k 'npm:dev:*'",
    "clean": "rm -rf ./dist",
    "build": "npm run lint && npm run dev:build",
    "postinstall": "npm run build",
    "lint": "eslint . --ext .ts",
    "prestart": "NODE_ENV=production npm --env-file=.env run build",
    "start": "NODE_ENV=production node ./dist/server/app.js",
    "mongo:start": "docker run --rm -d -p 27017:27017 --name mongo-joongle mongo:7",
    "mongo:stop": "docker stop mongo-joongle",
    "server:test": "vitest"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/*/*.json",
      "tasks/*.mjs"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module",
      "project": [
        "./server/tsconfig.json",
        "./client/tsconfig.json"
      ]
    },
    "plugins": [
      "@typescript-eslint",
      "import"
    ]
  },
  "devDependencies": {
    "@types/alpinejs": "^3.13.6",
    "@types/node": "^20.10.2",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "concurrently": "^8.2.2",
    "esbuild": "0.19.11",
    "eslint": "^8.55.0",
    "eslint-plugin-import": "^2.29.0",
    "json-schema-to-ts": "^3.0.0",
    "mongodb-memory-server": "^9.1.8",
    "typescript": "^5.3.2",
    "typescript-plugin-css-modules": "^5.1.0",
    "vitest": "^1.4.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@fastify/env": "^4.3.0",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/mongodb": "^8.0.0",
    "@fastify/static": "^6.12.0",
    "@tiptap/core": "^2.1.16",
    "@tiptap/extension-document": "^2.1.16",
    "@tiptap/extension-placeholder": "^2.1.16",
    "@tiptap/extension-typography": "^2.2.4",
    "@tiptap/html": "^2.2.3",
    "@tiptap/pm": "^2.1.16",
    "@tiptap/starter-kit": "^2.1.16",
    "alpinejs": "^3.13.3",
    "cheerio": "^1.0.0-rc.12",
    "clsx": "^2.1.0",
    "fastify": "^4.25.1",
    "fastify-favicon": "^4.3.0",
    "fastify-plugin": "^4.5.1",
    "fastify-uuid": "^1.0.1",
    "htmx.org": "^1.9.9",
    "pino-pretty": "^10.3.0",
    "preact": "^10.19.3",
    "preact-render-to-string": "^6.3.1",
    "slugify": "^1.6.6"
  }
}
